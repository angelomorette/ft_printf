NAME	= libftprintf.a
SRC		= ft_printf.c

OBJ		= $(SRC:.c=.o)

CFLAG	= -Wall -Wextra -Werror -I

RM		= rm -f

all: $(NAME)

$(NAME): $(OBJ)
		ar rcs $(NAME) $(OBJ)

.c.o:
		$(CC) $(CFLAG) -c $< -o $(<:.c=.o)

clean:
		$(RM) &(OBJ)

fclean: clean
		$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
